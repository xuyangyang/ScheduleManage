<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F7F7F7"
     >
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
   
    android:orientation="vertical" >

    <RelativeLayout 
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="45dp"
	android:background="@color/basecolor"

	>
	
<ImageView 
    android:id="@+id/previous_year"
     android:layout_width="wrap_content" 
	 android:layout_height="45dp"
	 android:onClick="back"
	 android:src="@drawable/back"
	 android:layout_alignParentLeft="true"
	 android:paddingLeft="20dip"
	 android:paddingRight="20dip"
    />
	<TextView
	    android:layout_width="wrap_content" 
	    android:layout_height="45dp"
        android:gravity="center"
        android:id="@+id/scheduleTop"
        android:textSize="18sp"
       android:layout_centerInParent="true"
       android:text="添加日程"
       android:textColor="#ffffff"
       
       
	/>
	<ImageView 
    android:id="@+id/next_year"
     android:layout_width="wrap_content" 
	 android:layout_height="45dp"
	 android:onClick="saveSchedule"
	 android:src="@drawable/check"
	 android:layout_alignParentRight="true"
	 android:paddingRight="20dip"
	 android:paddingLeft="20dip"
    />
	
	
</RelativeLayout>
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
     android:layout_marginTop="15dp"
     android:layout_marginBottom="5dp"
    >
    <TextView
        android:id="@+id/schedule_title"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="主题"
        android:textSize="18sp"
        android:gravity="center_vertical|left"
        android:paddingLeft="10dp"
        android:paddingRight="3dp"
        android:textColor="#c0c0c0"
         />
    <EditText 
        android:id="@+id/schedule_title_et"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:layout_gravity="center"
        android:textColor="#c0c0c0"
        android:textSize="18sp"
        android:singleLine="true"
        android:maxEms="20"
        android:background="@null"
      />
        
</LinearLayout>
 <View
      android:layout_width="fill_parent" 
      android:layout_height="2px"
      android:background="#c0c0c0"     
             />
 <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
     android:layout_marginTop="15dp"
     android:layout_marginBottom="5dp"
    >
    <TextView
        android:id="@+id/schedule_location"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="地点"
        android:textSize="18sp"
        android:gravity="center_vertical|left"
        android:paddingLeft="10dp"
        android:paddingRight="3dp"
        android:textColor="#c0c0c0"
         />
    <EditText 
        android:id="@+id/schedule_location_et"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:layout_gravity="center"
        android:textColor="#c0c0c0"
        android:textSize="18sp"
        android:singleLine="true"
        android:maxEms="20"
        android:background="@null"
      />
        
</LinearLayout>
 <View
      android:layout_width="fill_parent" 
      android:layout_height="2px"
      android:background="#c0c0c0"     
             />
 
 

    <EditText
        android:id="@+id/scheduleText"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:background="#F7F7F7"
        android:gravity="center_vertical|top"
        android:hint="内容"
        android:textColorHint="#c0c0c0"
        android:paddingLeft="10dip"
        android:paddingRight="10dp"
        android:textColor="#c0c0c0" />
    <View
      android:layout_width="fill_parent" 
      android:layout_height="2px"
      android:background="#c0c0c0"     
             />
    <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
     android:layout_marginTop="15dp"
     android:layout_marginBottom="5dp"
    >
    <TextView
        android:id="@+id/schedule_start"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="开始时间"
        android:textSize="18sp"
        android:gravity="center_vertical|left"
        android:paddingLeft="10dp"
        android:paddingRight="3dp"
        android:textColor="#c0c0c0"
         />
    <TextView
        android:id="@+id/scheduleDate_start"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:clickable="true"
        android:gravity="center_vertical|left"
        android:textColor="#c0c0c0"
        android:textStyle="bold" />
        
</LinearLayout>
 <View
      android:layout_width="fill_parent" 
      android:layout_height="2px"
      android:background="#c0c0c0"     
             />
 <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
     android:layout_marginTop="15dp"
     android:layout_marginBottom="5dp"
    >
    <TextView
        android:id="@+id/schedule_end"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="结束时间"
        android:textSize="18sp"
        android:gravity="center_vertical|left"
        android:paddingLeft="10dp"
        android:paddingRight="3dp"
        android:textColor="#c0c0c0"
         />
    <TextView
        android:id="@+id/scheduleDate_end"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:clickable="true"
        android:gravity="center_vertical|left"
        android:textColor="#c0c0c0"
        android:textStyle="bold" />
        
</LinearLayout>
 <View
      android:layout_width="fill_parent" 
      android:layout_height="2px"
      android:background="#c0c0c0"     
             />
   
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
     android:layout_marginTop="15dp"
     android:layout_marginBottom="5dp"
    >
    <TextView
        android:id="@+id/schedule_notify"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:text="提醒"
        android:textSize="18sp"
        android:gravity="center_vertical|left"
        android:paddingLeft="10dp"
        android:paddingRight="3dp"
        android:textColor="#c0c0c0"
         />
    <com.pwp.activity.SlipButton
            android:id="@+id/schedule_notify_switch"
            android:layout_width="80dip"
            android:layout_height="40dip"
             android:layout_weight="1"
             android:layout_gravity="center_vertical|right"
             />
        
</LinearLayout>
 <View
      android:layout_width="fill_parent" 
      android:layout_height="2px"
      android:background="#c0c0c0"     
             />
</LinearLayout>
</ScrollView><!-- From: file:/C:/Users/acer-/ScheduleManage/app/src/main/res/layout/schedule.xml -->